{{template "base" .}}

{{define "main"}}
  <table class="content-tables">
    <tr class="bold-text">
      <td>ID</td>
      <td>Имя</td>
      <td>Число команд</td>
    </tr>
    {{ range .Users }}
      <tr>
        <td>{{ .ID }}</td>
        <td>
          <a href="/history/{{.ID}}">{{ .Username }}</a>
        </td>
        <td>{{ .Count }}</td>
      </tr>
    {{end}}
  </table>
{{end}}